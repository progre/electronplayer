doctype html
meta(charset='utf-8')
title Sphere Live Stream Player
link(rel='stylesheet' href='style/vendor/bootstrap.min.css')
link(rel='stylesheet', href='style/style.css')
#root.container-fluid.p-a(style='display: none;')
  form
    .form-group.row
      label.col-xs-4.form-control-label.text-right(for='size') 魚眼の大きさ:
      .col-xs-8
        input.form-control#size(type='range', min='0.3', max='0.5', step='0.0001')
    .form-group.row
      label.col-xs-4.form-control-label.text-right(for='y') 魚眼のY軸:
      .col-xs-8
        input.form-control#y(type='range', min='0.4', max='0.6', step='0.0001')
    .form-group.row
      label.col-xs-4.form-control-label.text-right(for='left') 左魚眼のX軸:
      .col-xs-8
        input.form-control#left(type='range', min='0.15', max='0.35', step='0.0001')
    .form-group.row
      label.col-xs-4.form-control-label.text-right(for='right') 右魚眼のX軸:
      .col-xs-8
        input.form-control#right(type='range', min='0.65', max='0.85', step='0.0001')
    .form-group.row
      label.col-xs-4.form-control-label.text-right(for='right') カメラの向き:
      .col-xs-8.btn-group(data-toggle='buttons')
        label#directionLeft.btn.btn-secondary.active
          input(type='radio', name='left', checked)
          | 左倒し
        label#directionUp.btn.btn-secondary
          input(type='radio', name='up')
          | 正方向
        label#directionRight.btn.btn-secondary
          input(type='radio', name='right')
          | 右倒し
script window.$ = window.jQuery = require('./js/vendor/jquery.min.js');
script(src='js/vendor/bootstrap.min.js')
script(src='js/dfadjust.js')
